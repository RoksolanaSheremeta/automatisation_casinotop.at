const TelegramBot = require('node-telegram-bot-api');
const token = '1674082355:AAFdvsBuiMNbOpR8kKT0EFBVpn729s7Qj5Y';
const { tegIdSs } = require('../global_files/tg/tegidss');
const { tegId } = require('../global_files/tg/tegid');
const fetch = require('node-fetch');
// const assert = require('assert');



class Mess {
    
    // Slack messenger Page speed
    async slackPageSpeed (strVariable) {
        const body = {"text": String(strVariable)};

        const response = await fetch('https://hooks.slack.com/services/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', {
          method: 'post',
          body: JSON.stringify(body),
          headers: {'Content-Type': 'application/json'}
      });
     
      console.log('RESPONSE:', response);
    }

    // slackStatus200
    async slackStatus200 (strVariable) {
        const body = {"text": String(strVariable)};

        const response = await fetch('https://hooks.slack.com/services/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', { 
          method: 'post',
          body: JSON.stringify(body),
          headers: {'Content-Type': 'application/json'}
      });
     
      console.log('RESPONSE:', response);
    }



    // Slack messenger Site Status
    async slackStatusCode (strVariable) {
        const body = {"text": String(strVariable)};

        const response = await fetch('https://hooks.slack.com/services/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', {
          method: 'post',
          body: JSON.stringify(body),
          headers: {'Content-Type': 'application/json'}
      });
     
      console.log('RESPONSE:', response);
    }


    // Telegram messenger Main Chat
    async telMainChat (strVariable) {
        const bot = new TelegramBot(token, {
            polling: true,
          });
          // const chat_id = -555596508;
          bot.sendMessage(tegId, strVariable); 

    }

    
    // Telegram messenger Site status
    async telStatusCode (strVariable) {
        const bot = new TelegramBot(token, {
            polling: true,
          });
